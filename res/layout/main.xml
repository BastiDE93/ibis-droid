                android:layout_weight="1"
                android:text="TextView" 
                android:layout_span="2"
            />

            <Button
                android:id="@+id/n1"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="1" />

            <Button
